<form method="POST" action="/behavior/summary">
    <div class="form-group">
      <label for="aweek">Summary Week</label>
      <input type="week" class="form-control" name="aweek" value="<%= aweek %>">
    </div>
    <div class="form-group">
      <label for="amonth">Summary Month</label>
      <input type="month" class="form-control" name="amonth" value="<%= amonth %>">
    </div>
        <button type="submit" class="btn btn-primary">Get Summary</button>
</form>
