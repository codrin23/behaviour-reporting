<%- include('../partials/header.ejs') %>
<%- include('../partials/navigation.ejs') %>
<h2>Week Summary for period <%= startingDate %> to <%= endingDate %></h2>
<% if (!currentWeekMorningSummary && !currentWeekEveningSummary) { %>
    <p>No data available</p>
<% } else { %>
    <div class="row">
        Average sleep duration: <% if (currentWeekMorningSummary && currentWeekMorningSummary.sleep_duration_avg) { %> <%= currentWeekMorningSummary.sleep_duration_avg %> hours <% } else { %> No data available <% } %>
    </div>
    <div class="row">
        Average time spent on sports and exercise: <% if (currentWeekEveningSummary && currentWeekEveningSummary.sports_and_exercise_duration_avg) { %> <%= currentWeekEveningSummary.sports_and_exercise_duration_avg %> hours <% } else { %> No data available <% } %>
    </div>
    <div class="row">
        Average time spent studying: <% if (currentWeekEveningSummary && currentWeekEveningSummary.studying_duration_avg) { %> <%= currentWeekEveningSummary.studying_duration_avg %> hours <% } else { %> No data available <% } %>
    </div>
    <div class="row">
        Average sleep quality: <% if (currentWeekMorningSummary && currentWeekMorningSummary.sleep_quality_avg) { %> <%= currentWeekMorningSummary.sleep_quality_avg %> <% } else { %> No data available <% } %>
    </div>
    <div class="row">
        Average morning mood: <% if (currentWeekMorningSummary && currentWeekMorningSummary.generic_mood_avg) { %> <%= currentWeekMorningSummary.generic_mood_avg %> <% } else { %> No data available <% } %>
    </div>
    <div class="row">
        Average evening mood:<% if (currentWeekEveningSummary && currentWeekEveningSummary.generic_mood_avg) { %> <%= currentWeekEveningSummary.generic_mood_avg %> <% } else { %> No data available <% } %>
    </div>
<% } %>
